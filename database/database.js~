const sql = require('sqlite3');
const db = new sql.Database("/database/banco.db");

function criarTabela() {
    console.log("Criando tabela para Cadastro de PET...");
    return new Promise((resolve, reject) => {
    db.run(
        "CREATE TABLE cadastroPet  (id INTEGER PRIMARY KEY AUTOINCREMENT, nome text, idade integer, especie text, porte text, caracteristicas text,  tutor text,  contato email)"),
        (erro) => {
            if(erro)
                reject(erro);
            else
                resolve();

        };
   });
}

criarTabela();

