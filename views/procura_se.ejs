 <%- include("_header") -%>
 <%# <link rel="stylesheet" href="../static/css/procura_se.css"> %> <%# Removido se os estilos estiverem em default.css/bootstrap %>
 <%# <link rel="stylesheet" href="../static/css/table.css"> %> <%# Removido se os estilos estiverem em default.css/bootstrap %>
 
 <!-- Header/CTA Section -->
 <div class="container mt-4 mb-5"> <!-- Aumentei um pouco a margem inferior para separar mais da tabela -->
     <div class="text-center py-3"> <!-- Usei padding vertical (py) e mantive centralizado -->
         <h1><i class="fas fa-search me-2"></i>Procurando um PET?</h1> <!-- Adicionado espaço (me-2) após o ícone -->
         <p class="lead">Quer ajudar a encontrar um PET desaparecido? ANUNCIE, nossa rede voluntária gostaria de ajudar!</p>
         <p>Se você tem um PET desaparecido e quer ajuda para encontrá-lo, adicione as informações abaixo.</p>
          <!-- Botão "Anunciar" -->
          <a href="./form_procura_se" class="btn btn-primary mt-3">
              <i class="fas fa-plus-circle me-1"></i>Anunciar Desaparecimento <!-- Adicionado espaço (me-1) após o ícone -->
          </a>
     </div>
     
 </div>
 
 <!-- Table Section -->
 <div class="container mb-5">
     <h2 class="text-center mb-4">Pets Desaparecidos Atualmente</h2>
 
     <% if (typeof model !=='undefined' && model.length > 0) { %>
         <div class="card shadow-sm">
             <div class="card-header">
                 Lista de Pets Desaparecidos
             </div>
             <div class="card-body">
                 <div class="table-responsive">
                     <!-- Adicionada classe 'procura-se-table' se houver estilos customizados para ela -->
                     <table class="procura-se-table table table-striped table-hover align-middle caption-top"> <!-- Adicionado caption-top para melhor acessibilidade/estrutura -->
                         <caption>Lista detalhada de pets desaparecidos.</caption> <!-- Adicionada legenda para acessibilidade -->
                         <thead class="table-light">
                             <tr>
                                 <th>Data</th>
                                 <th>Foto</th>
                                 <th>Nome Pet</th>
                                 <th>Idade</th>
                                 <th>Espécie</th>
                                 <th>Porte</th>
                                 <th>Características</th>
                                 <th>Local</th>
                                 <th>Tutor</th>
                                 <th>Contato</th>
                                 <th>Whatsapp</th>
                                 <th class="text-center">Ações</th>
                             </tr>
                         </thead>
                         <tbody>
                             <% for (const procura_se of model) { %>
                             <tr>
                                 <td><%= procura_se.data ? new Date(procura_se.data).toLocaleDateString('pt-BR') : 'N/A' %></td>
                                 <td>
                                     <img src="../static/uploads/procura_se/<%= procura_se.arquivo %>"
                                          width="80" height="80"
                                          style="object-fit: cover;" <!-- Removido border-radius inline -->
                                          alt="Foto de <%= procura_se.nomePet %>"
                                          class="img-thumbnail p-1 rounded"/> <!-- Adicionado 'rounded' do Bootstrap -->
                                 </td>
                                 <td><%= procura_se.nomePet %></td>
                                 <td><%= procura_se.idadePet %></td>
                                 <td><%= procura_se.especie %></td>
                                 <td><%= procura_se.porte %></td>
                                 <td style="min-width: 150px;"><%= procura_se.caracteristicas %></td>
                                 <td><%= procura_se.local %></td>
                                 <td><%= procura_se.tutor %></td>
                                 <td><%= procura_se.contato %></td>
                                 <td><%= procura_se.whatsapp %></td>
                                 <td class="text-center">
                                     <form action="/delete_procura_se/<%= procura_se._id %>/<%= procura_se.arquivo %>" method="post" class="d-inline" onsubmit="return confirm('Deseja realmente excluir este anúncio?')">
                                         <button type="submit" class="btn btn-danger btn-sm" title="Excluir Anúncio">
                                             <i class="fas fa-trash-alt"></i>
                                             <span class="visually-hidden">Excluir</span> <!-- Texto para leitores de tela -->
                                         </button>
                                     </form>
                                 </td>
                             </tr>
                             <% } %>
                         </tbody>
                     </table>
                 </div> <!-- End table-responsive -->
             </div> <!-- End card-body -->
         </div> <!-- End card -->
     <% } else { %>
         <div class="alert alert-info text-center shadow-sm" role="alert"> <!-- Adicionado shadow-sm para consistência visual -->
             Nenhum PET desaparecido anunciado no momento.
         </div>
     <% } %>
 </div> <!-- End container -->
 
 <%- include("_footer") -%>
 