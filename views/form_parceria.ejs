 <%- include("_header")-%>
 
 <div class="container mt-4 mb-4">
     <div class="page-header mb-3">
         <h1>Proposta de Parceria</h1>
         <p class="lead">
             Compartilhe sua proposta de parceria e vamos juntos fazer a diferença na vida dos animais.
         </p>
     </div>
 
     <div class="form-container card p-4 shadow-sm"> <!-- Added shadow for consistency -->
         <form action="/parceria" method="post" class="row g-3" id="form-parceria"> <!-- Added action and ID -->
             <div class="col-md-6">
                 <label for="empresa" class="form-label">Empresa <span class="text-danger">*</span></label> <!-- Added asterisk -->
                 <input type="text" name="empresa" id="empresa" placeholder="Nome da Empresa" class="form-control" required/>
             </div>
             <div class="col-md-6">
                 <label for="localidade" class="form-label">Localidade:</label>
                 <input type="text" name="localidade" id="localidade" placeholder="Cidade/Estado" class="form-control"/>
             </div>
             <div class="col-12">
                 <!-- Changed label text slightly for clarity -->
                 <label for="proposta" class="form-label">Descrição da Proposta:</label>
                 <textarea name="proposta" id="proposta" rows="4" placeholder="Descreva como sua empresa gostaria de colaborar..." class="form-control"></textarea>
             </div>
             <div class="col-md-6">
                 <label for="representante" class="form-label">Representante <span class="text-danger">*</span></label> <!-- Added asterisk -->
                 <input type="text" name="representante" id="representante" placeholder="Nome do Representante" class="form-control" required/>
             </div>
             <div class="col-md-6">
                 <label for="telefone" class="form-label">Telefone <span class="text-danger">*</span></label> <!-- Added asterisk -->
                 <!-- Consider adding pattern for basic validation or using a JS masking library -->
                 <input type="tel" name="telefone" id="telefone" placeholder="(00) 00000-0000" class="form-control" required/>
                 <!-- Removed inline JS formatting - better handled by a library or pattern -->
                 <!-- <input type="tel" name="telefone" id="telefone" onInput="this.value = phoneFormat(this.value)" placeholder="Telefone (00) 00000-0000" class="form-control" required/> -->
             </div>
             <div class="col-md-6">
                 <label for="whatsapp" class="form-label">Disponível no Whatsapp?</label> <!-- Clearer label -->
                 <select name="whatsapp" id="whatsapp" class="form-select">
                     <!-- Changed default option value to empty string and made it clearer -->
                     <option value="" selected>Não informado</option>
                     <option value="sim">Sim</option>
                     <option value="nao">Não</option>
                 </select>
             </div>
             <div class="col-md-6">
                 <label for="email" class="form-label">Email:</label>
                 <input type="email" name="email" id="email" placeholder="exemplo@empresa.com" class="form-control"/>
             </div>
             <div class="col-12 d-flex justify-content-between align-items-center mt-3"> <!-- Added margin-top -->
                 <a href="./parceria" class="btn btn-secondary">Cancelar</a>
                 <!-- Removed inline confirm - consider JS validation function instead -->
                 <button type="submit" class="btn btn-primary">Enviar Proposta</button>
                 <!-- <input type="submit" value="Enviar Proposta" class="btn btn-primary" onclick="return confirm('Os dados estão corretos?')"/> -->
             </div>
             <div class="col-12"> <!-- Ensure the small text is also in a column -->
                  <small class="form-text text-muted mt-2"><span class="text-danger">*</span> Campos obrigatórios</small>
             </div>
         </form>
     </div>
 </div>
