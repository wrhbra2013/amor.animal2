<%-include("_header")-%>
<div class="adotante-container">
  <h1 class="adotante-titulo">Adotantes</h1>
  <div class="adotante-filtro">
    <form action="/adotante/filtrar" method="post" class="adotante-form-filtro">
      <input type="text" name="nome" placeholder="Filtrar por nome" class="adotante-input-filtro">
      <input type="submit" value="Filtrar" class="btn btn-default btn-primary adotante-btn-filtrar">
    </form>
  </div>
  <div class="adotante-acoes">    <form action="/adotante/novo" method="get" class="adotante-form-novo">
      <input type="submit" value="Novo Adotante" class="btn btn-default btn-success adotante-btn-novo">
    </form>
    </div>

  <div class="adotante-lista">
    <table id="data" class="adotante-tabela">
      <% if (typeof model !=='undefined' && model.length> 0) {%>
        <!-- Loop bloco1 -->
        <!-- Loop de todo o array -->
        <% for(const adotante of model) { %>
          <!-- Loop somente propriedades do array -->
          <tr>
            <% for (const model in adotante) {%>
              <th class="adotante-tabela-header"><%= model.charAt(0).toUpperCase() + model.slice(1) %></th>
            <%}%>
            <%break%>
          </tr>
        <%}%>
        <!-- Loop bloco2 -->
        <% for(const adotante of model) { %>
          <tr class="adotante-tabela-linha">
            <!-- Loop dos objetos do array -->
            <% for (const key in adotante) { %>
              <td class="adotante-tabela-celula">
                <%=adotante[key]%>
              </td>
            <% } %> 
          </tr>
        <%}%>
      <% } else { %>
        <p class="adotante-sem-dados">Adotantes: Nenhum dado dispon√≠vel</p>
        <script>document.getElementById('data').style.display="none";</script>
      <% } %>
    </table>
  </div>

  <div class="adotante-acoes">
    <form action="/relatorio/adotante" method="post" class="adotante-form-relatorio">
      <input type="submit" value="Gerar Relatorio" class="btn btn-default btn-danger adotante-btn-relatorio" onclick="return confirm('Gerar Relatorio?')"/>
    </form>
    <button type="button" onclick="javascript:window.print()" class="adotante-btn-download">Download HTML</button>
  </div>
</div>
<%-include("_footer")-%>