<%- include("_header") -%>
  
 <main class="container mt-4 mb-5">
              <h5 class="card-title text-center mb-4">Itens Doados</h5>
                <div class="card shadow-sm">
                    <div class="card-body">
                        <%if  (typeof model !== 'undefined' && model.length > 0) {%>
                        <h5 class="card-title text-center mb-4">Lista de Coletas</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th>Data</th>
                                        <th>Tipo</th>
                                        <th>Quantidade</th>
                                        <th>Descrição</th>
                                        <th class="text-center">Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% model.forEach(coleta => { %>
                                    <tr>
                                        <td><%= new Date(coleta.data).toLocaleDateString('pt-BR') %></td>
                                        <td><%= coleta.tipo %></td>
                                        <td><%= coleta.quantidade %></td>
                                        <td><%= coleta.descricao %></td>
                                        <td class="text-center">
                                            <div class="d-flex justify-content-center gap-2">
                                                <a href="/coleta/form/<%= coleta.id %>" class="btn btn-primary btn-sm" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('<%= coleta.id %>')" title="Excluir">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <div class="text-center p-4">
                            <i class="fas fa-info-circle fa-2x text-muted mb-2"></i>
                            <p class="mb-0">Nenhuma coleta registrada no momento.</p>
                        </div>
                        <% } %>
                        <div class="text-end mt-3">
                            <a href="/doacao/coleta/form" class="btn btn-success">
                                <i class="fas fa-plus me-2"></i>Nova Coleta
                            </a>
                        </div>
                    </div>
               
            
    </div>

    <script>
        function confirmDelete(id) {
            if (confirm('Tem certeza de que deseja excluir esta coleta? Esta ação não poderá ser desfeita.')) {
                window.location.href = `/delete/coleta/${id}`;
            }
        }
    </script>

    

 </main>
 <%- include("_footer")-%>