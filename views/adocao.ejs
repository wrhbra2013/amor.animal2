<%- include("_header") -%>

<!-- Bloco de chamada para ação -->
<div class="container mt-4 mb-4">
  <div class="page-header mb-3">
  <h2>Quer contar a sua história de adoção?</h2>
  <p>Se você tem um PET adotado e quer contar a sua história, ADICIONE!</p>
  <p>Compartilhe sua experiência e inspire outras pessoas a adotarem também!</p>
  <a href="./form_adotado" class="btn btn-primary mt-3">Adicionar História</a>
  </div>
</div>

<div class="container">
  <% if (typeof model2 !=='undefined' && model2.length > 0) { %>
    <% for(const adotado of model2) { %>
      <div class="adocao-historia-item"> <%# Renomeado de .artigo %>

        <img src="/static/uploads/adotado/<%= adotado.arquivo %>" class="adocao-historia-imagem" alt="Foto de <%= adotado.pet %>" /> <%# Classe adicionada e alt text %>

        <h3 class="adocao-historia-tutor"> <%# Classe adicionada e mudado para h3 por hierarquia %>
          Tutor: <%= adotado.tutor %>
        </h3>
        <p class="adocao-historia-texto">"<%= adotado.historia.substring(0, 150) %>..."</p> <%# Classe adicionada %>

        <h4 class="adocao-historia-pet"> <%# Classe adicionada e mudado para h4 %>
          Pet: <%= adotado.pet %>
        </h4>
        <p class="adocao-historia-origem">Origem: <%= adotado.origem %></p>

        <div class="d-flex justify-content-between align-items-center">
          <a href="/adocao/<%= adotado.id %>" class="btn btn-outline-secondary btn-sm">Ler Mais &gt;</a>
          <form action="/delete/adotado/<%= adotado.id %>/<%= adotado.arquivo %>" method="post" onsubmit="return confirm('Tem certeza que deseja apagar esta postagem?')">
            <button type="submit" class="btn btn-danger btn-sm">Apagar</button>
          </form>
        </div>

      </div>
    <% } %>
  <% } else { %>
    <p class="text-center">Nenhuma história de adoção foi adicionada ainda. Seja o primeiro!</p>
  <% } %>
</div>

<%- include("_footer") -%>
