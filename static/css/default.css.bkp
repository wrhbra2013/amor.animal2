 /*
 *
 *  amor.animal2 default css
 *
 *  Based on pages styles css
 *
 */

body {
  font-family: sans-serif;
  background-color: #f8f9fa;
  margin: 0;
  padding: 0;
  color: black;
}

body.high-contrast {
  background-color: black;
  color: white;
}
body.high-contrast a {
  color: cyan; /* Example: change link color in high contrast */
}

footer {
  text-align: center;
  margin-top: 20px;
  padding: 20px; /* Increased padding */
  background-color: #f0f0f0; /* Light gray background */
  color: #555; /* Darker text color */
 /* ... other styles ... */
  display: flex;
  flex-direction: row;
  justify-content: center;
  min-height: 30px; /* Adjust based on your content */
}

footer img{
  display:inline;
}


.social-icons {
  margin-top: 10px;
}

.social-icons a {
  display: inline-block;
  margin: 0 10px;
  color: #555;
  font-size: 1.5em; /* Adjust icon size */
}

.social-icons a:hover {
  color: #007bff; /* Or your primary color */
}

.container {
  max-width: 800px;
  margin: 20px auto;
  background-color: #fff;
  padding: 20px; /* Increased padding */
  border-radius: 8px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.container.high-contrast {
  background-color: #333; /* Dark background for high contrast */
  color: #fff; /* Light text color */
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.3); /* Adjust shadow for visibility */
  border: 1px solid #555; /* Darker border for high contrast */
}
footer, body.high-contrast .container {
  background-color: #333; /* Dark background for high contrast */
  color: #fff; /* Light text color */
  box-shadow: 0 0 10px rgba(255, 255, 255, 0.3); /* Adjust shadow for visibility */
  
}

/* Headings */

h1, h2, h3 {
  color: #333;
}

p {
  line-height: 1.6;
  color: #555;
}

body.high-contrast h1, body.high-contrast h2, body.high-contrast h3 {
  color: #fff; /* Light heading color in high contrast */
}
body.high-contrast p {
  color: #ddd; /* Lighter text for paragraphs */
}

a { /* Links */
  color: #007bff;
  text-decoration: none;
} /* Default link color */


a:hover {
  text-decoration: underline;
}

.button {
  display: inline-block; /* Make button inline */
  padding: 10px 15px;
  background-color: #28a745;
  color: #fff;
  border: none;
  border-radius: 5px;
  cursor: pointer;
}
body.high-contrast .button {
  background-color: #007bff; /* Different button color in high contrast */
}


.button:hover {
  background-color: #0056b3;
}

/* Specific elements */

header {
  text-align: center; /* Center header content */
  margin-bottom: 30px; /* Increased bottom margin */
}

footer {
  text-align: center;
  margin-top: 20px;
  padding-top: 10px;
  border-top: 1px solid #eee;
  color: #777;
}
body.high-contrast footer {
  color: #777;
}
/* Forms */
/* Form elements (if needed) */

input[type="text"],
input[type="email"],
textarea {
  width: 100%;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 4px; /* Rounded corners */
  box-sizing: border-box; /* Ensure padding doesn't affect overall width */
}
body.high-contrast input[type="text"],
body.high-contrast input[type="email"],
body.high-contrast textarea {
  background-color: #555; /* Darker input background */
}

label {
  display: block;
  margin-bottom: 5px;
  color: #333;
}

/* Responsive adjustments (example) */

@media (max-width: 600px) {
  .container {
    margin: 10px;
    padding: 10px;
  }

  h1 {
    font-size: 2em; /* Adjust heading size for smaller screens */
  }
}

/* Table styles */
table {
  width: 100%;
  border-collapse: collapse;
  margin-bottom: 20px;
}

th, td {
  padding: 10px;
  border: 1px solid #ddd;
  text-align: left;
}
body.high-contrast th, body.high-contrast td {
  border-color: #555; /* Darker border in high contrast */
}


th {
  background-color: #f2f2f2;
}

/* Images */
/* Image styles */
img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 0 auto;
}
/* Navigation */
/* Navigation styles */
nav {
  background-color: #343a40; /* Dark background */
  color: #fff;
  padding: 10px 0;
}

nav ul {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: center;
}

nav li {
  display: inline;
  margin: 0 15px;
}

nav a {
  color: #fff;
  text-decoration: none;
}

nav a:hover {
  text-decoration: underline;
}
body.high-contrast nav {
  background-color: #000; /* Even darker nav */
}

/* Utilities */
/* Utility classes */
.text-center {
  text-align: center;
}

.mt-2 {
  margin-top: 10px;
}

.mt-3 {
  margin-top: 15px;
}

.mt-4 {
  margin-top: 20px;
}

.mb-2 {
  margin-bottom: 10px;
}

.mb-3 {
  margin-bottom: 15px;
}

.mb-4 {
  margin-bottom: 20px;
}

.mb-5 {
  margin-bottom: 25px;
}
.bg-contrast {
}
}/* Alert styles */
.alert {
  padding: 10px;
  margin-bottom: 15px;
  border: 1px solid transparent;
  border-radius: 4px;
}

.alert-primary {
  color: #004085;
  background-color: #cce5ff;
  border-color: #b8daff;
}

.alert-secondary {
  color: #383d41;
  background-color: #e2e3e5;
  border-color: #d6d8db;
}

.alert-success {
  color: #155724;
  background-color: #c3e6cb;
  border-color: #b1dfbb;
}

.alert-danger {
  color: #721c24;
  background-color: #f8d7da;
  border-color: #f5c6cb;
}

.alert-warning {
  color: #856404;
  background-color: #fff3cd;
  border-color: #ffeeba;
}

.alert-info {
  color: #0c5460;
  background-color: #d1ecf1;
  border-color: #bee5eb;
}

.alert-light {
  color: #818182;
  background-color: #fefefe;
  border-color: #fdfdfe;
}

.alert-dark {
  color: #1b1e21;
  background-color: #d6d8d9;
  border-color: #c6c8ca;
}
/* Cards */
/* Card styles */
.card {
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-bottom: 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}
body.high-contrast .card {
  border-color: #555; /* Darker card border */
  box-shadow: 0 2px 5px rgba(255, 255, 255, 0.2); /* Adjust shadow */
}

.card-header {
  background-color: #f8f9fa;
  padding: 10px;
  border-bottom: 1px solid #ccc;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.card-body {
  padding: 20px;
}

.card-title {
  margin-bottom: 10px;
}

/* Grid */
/* Grid styles */
.row {
  display: flex;
  flex-wrap: wrap;
  margin-right: -15px;
  margin-left: -15px;
}

.col-md-6 {
  position: relative;
  width: 100%;
  padding-right: 15px;
  padding-left: 15px;
}

@media (min-width: 768px) {
  .col-md-6 {
    flex: 0 0 50%;
    max-width: 50%;
  }
}
/* Lists */
/* List styles */
ul.list-unstyled {
  list-style: none;
  padding-left: 0;
}

ul.list-unstyled li {
  margin-bottom: 5px;
}

ul.list-checked {
  list-style: none;
  padding-left: 0;
}

ul.list-checked li {
  margin-bottom: 5px;
}

ul.list-checked li::before {
  content: "âœ“";
  color: green;
  display: inline-block;
  width: 1em;
  margin-left: -1em;
}
/* Mobile Menu */
.mobile-menu-button {
  display: none;
  background-color: #343a40;
  color: #fff;
  padding: 10px;
  border: none;
  cursor: pointer;
}

.mobile-menu {
  display: none;
  background-color: #343a40;
  color: #fff;
  padding: 10px 0;
}

.mobile-menu ul {
  list-style: none;
  padding: 0;
  margin: 0;
  text-align: center;
}

.mobile-menu li {
  padding: 10px;
}

.mobile-menu a {
  color: #fff;
  text-decoration: none;
}
/* --- High Contrast Styles for form_adotado.ejs --- */

/* Ensure card background and text contrast */
body.high-contrast .card {
  background-color: #1a1a1a; /* Darker background for the card */
  border: 1px solid #ccc; /* Lighter border for visibility */
  color: white; /* Ensure text inside the card is white */
}

/* Adjust form input/textarea appearance */
body.high-contrast .form-control {
  background-color: #333; /* Dark background for inputs */
  color: white; /* White text in inputs */
  border: 1px solid #888; /* Lighter border for inputs */
}

/* Style placeholders for high contrast */
body.high-contrast .form-control::placeholder {
  color: #bbb; /* Lighter placeholder text */
  opacity: 1; /* Ensure placeholder is fully opaque */
}

/* Adjust form labels */
body.high-contrast .form-label {
  color: white; /* Ensure labels are white */
}

/* Style the image preview area */
body.high-contrast #image-preview-container {
  background-color: #222; /* Darker background for preview area */
  border-color: #888; /* Lighter border */
}

body.high-contrast #preview-placeholder {
    color: #bbb; /* Lighter placeholder text */
}

/* Ensure buttons have good contrast */
body.high-contrast .btn-primary {
  background-color: #0056b3; /* Adjust primary button color if needed */
  border-color: #0056b3;
  color: white;
}
body.high-contrast .btn-primary:hover {
  background-color: #004085;
  border-color: #00376e;
}

body.high-contrast .btn-secondary {
  background-color: #5a6268; /* Adjust secondary button color */
  border-color: #545b62;
  color: white;
}
body.high-contrast .btn-secondary:hover {
  background-color: #4e555b;
  border-color: #484e53;
}

body.high-contrast .btn-outline-secondary {
    color: #ccc; /* Lighter text for outline button */
    border-color: #888; /* Lighter border */
}
body.high-contrast .btn-outline-secondary:hover {
    background-color: #444; /* Darker background on hover */
    color: white;
}

/* Adjust muted text */
body.high-contrast .text-muted {
    color: #bbb !important; /* Lighter muted text, !important might be needed depending on specificity */
}

/* Adjust horizontal rule */
body.high-contrast hr {
    border-top: 1px solid #555; /* Lighter horizontal rule */
}

